{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "incremental": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES2019",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "es2019"
    ]
  },
  "include": [
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
